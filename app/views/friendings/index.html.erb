<main>
	<div class="container about-info-container">
		<header>
			<div class="row main-content-header">
				<div class="col-xs-2 col-xs-offset-5">
					<h2>Friends</h2>
				</div>
			</div>
		</header>

		<div class="row big-friend-container">
      <div class="friend-container-row clearfix">
        <% if @user.followees.any? %>
          <% @user.followees.each do |friend| %>
            <%= render "shared/friends-section-friends", friend: friend %>
          <% end %>
        <% else %>
          <h1 class="text-center">Go make some friends!</h1>
        <% end %>
      </div>
		</div>
	</div>
</main>
