<div class="row">
  <header class="clearfix">
    <div class="col-xs-2 ex-post-profile-container">
      <%= link_to image_tag("/imgs/harry_potter_small.jpg", class: "ex-post-profile"), activity.author %>
    </div>
    <div class="col-xs-10 ex-poster-info">
      <%= link_to activity.author.fullname, activity.author %>
      <p class="ex-post-timestamp">Posted on <%= activity.created_at %></p>
    </div>
  </header>
</div>
<div class="row">
  <div class="col-xs-12 ex-post-border">
    <p class="ex-post-content"><%= activity.postable.content %></p>
  </div>
</div>
<div class="row">
  <footer class="tl-post-footer clearfix">
    <div class="col-xs-12">
      <%= like_or_unlike(activity) %>
      <%= link_to "Comment", "#" %>
      <%= link_to "Delete", user_activity_path(@user, activity), class: "pull-right", method: :delete  if created_by_user? %>
    </div>
    <%= display_likes(activity) %>
  </footer>
</div>
